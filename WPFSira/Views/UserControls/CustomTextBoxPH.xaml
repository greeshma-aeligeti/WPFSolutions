<UserControl x:Class="WPFSira.Views.UserControls.CustomTextBoxPH"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFSira.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Background="White">
        <TextBox x:Name="textInput" TextChanged="textInput_TextChanged" VerticalContentAlignment="Center" FontSize="16" Background="Transparent" FontWeight="Light" />
        <TextBlock Text="hello" Panel.ZIndex="0" x:Name="tbPlaceholder" FontSize="16" FontWeight="Light" VerticalAlignment="Center"  Margin="5" Foreground="DarkGray"/>
    </Grid>
</UserControl>
