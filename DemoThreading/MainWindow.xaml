<Window x:Class="DemoThreading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoThreading"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- First half (50%) -->
            <ColumnDefinition Width="*" />
            <!-- Second half (50%) -->
        </Grid.ColumnDefinitions>

            <ListView ItemsSource="{Binding AllNumbersList}" Margin="10" Grid.Column="0" VerticalAlignment="Top" Height="144" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="All numbers" DisplayMemberBinding="{Binding}" Width="356"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <ListView ItemsSource="{Binding NumbersList}" Grid.Column="1" Margin="10" VerticalAlignment="Top" Height="144" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Multiples of Ten" DisplayMemberBinding="{Binding}" Width="356"/>
                    </GridView>
                </ListView.View>
            </ListView>
        <!-- Start Button -->
        <Button x:Name="btnStart" Content="Start" Grid.Column="0" HorizontalAlignment="Right" Margin="10,220,20,0" VerticalAlignment="Top" Width="100" Click="BtnStart_Click"/>

        <!-- Stop Button -->
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Grid.Column="1" Margin="10,220,240,40" VerticalAlignment="Top" Width="100" Click="BtnStop_Click"/>
    </Grid>
</Window>
